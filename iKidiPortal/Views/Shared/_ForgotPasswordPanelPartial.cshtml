@model iKidi.Models.ForgotPasswordViewModel

<div class="modal fade" id="pwdModal" role="dialog">
    <div class="modal-dialog">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4>
                    @Resource.ForgotYourPassword
                    <a id="close-forgot-password" class="pull-right" 
                       data-dismiss="modal">
                        <span class="glyphicon glyphicon-remove"></span>
                    </a>
                </h4>
            </div>
            <div class="panel-body">
                @Html.AntiForgeryToken()
                <p>@Resource.ForgotPasswordMessage</p>
                <div class="input-group">
                    <span class="input-group-addon glyphicon glyphicon-envelope"></span>
                    @Html.TextBoxFor(m => m.Email, new { @class="form-control reset-email", @placeholder=Resource.EnterEmail})
                    <button id="resetPwd" class="btn btn-primary" type="button">
                        @Resource.ResetPassword
                    </button>
                </div>
                <div class="support-text">
                    <strong>@Resource.HaveTrouble</strong>&nbsp;@Resource.SendMailToSupport
                    <a href="mailto:Support@ikidi.pl">@Resource.SendMailToSupport1</a>
                </div>
            </div>
        </div>
    </div>
</div>