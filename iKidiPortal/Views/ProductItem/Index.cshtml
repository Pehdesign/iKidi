@model IEnumerable<iKidi.Models.ProductItemModel>
@using iKidi.Models;

@{
    ViewBag.Title = @Resource.Index;
}

<h2>@Resource.ProductItem</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-striped table-condensed">
    <tr class="success">
        <th>
            @Resource.Product
        </th>
        <th>
            @Resource.Item
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemTitle)
            </td>

            @Html.Partial("_TableButtonsPartial",
            new SmallButtonModel { ItemId = item.ItemId, ProductId = item.ProductId })
        </tr>
    }

</table>
