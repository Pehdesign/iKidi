@model IEnumerable<iKidi.Entities.Subscription>
@using iKidi.Models;

@{
    ViewBag.Title = @Resource.Index;
}

<h2>@Resource.Subscription</h2>

<p>
    @Html.Partial("_CreateButtonPartial")
</p>
<table class="table table-condensed table-striped">
    <tr class="success">
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RegistrationCode)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RegistrationCode)
        </td>
        @Html.Partial("_TableButtonsPartial",
            new SmallButtonModel { Id = item.Id })
    </tr>
}

</table>
