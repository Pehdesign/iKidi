@model iKidi.Models.ProductItemModel
@using iKidi.Models

@{
    ViewBag.Title = @Resource.Details;
}

<h2>@Resource.Details</h2>

<div>
    <h4>@Resource.ProductItem</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(m => m.ItemTitle)</dt>
        <dd>@Html.DisplayFor(m => m.ItemTitle)</dd>
        <dt>@Html.DisplayNameFor(m => m.ProductTitle)</dt>
        <dd>@Html.DisplayFor(m => m.ProductTitle)</dd>
    </dl>
</div>
<p>
    @Html.Partial("_EditButtonDetailPartial", 
        new EditButtonModel { ItemId = Model.ItemId, ProductId = Model.ProductId })
    @Html.Partial("_BackToListButtonPartial")
</p>
